@model ShoppingCartVM

<div class="m-5 mt-4">
    <div class="row p-4 py-2 pt-3 text-primary  bg-light">
        <div class="col-6">
            <h3>Shopping cart</h3>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-sm btn-primary" asp-area="Customer" asp-controller="Home" asp-action="Index">&nbsp;Continue shopping&nbsp;</a>
        </div>
    </div>

    @foreach (var cart in @Model.ListCart)
    {
        <div class="row bg-secondary pt-2">
            <div class="row col">
                <div class="col-2">
                    <Img src="@cart.Product.ImageUrl" height="90px" />
                </div>
                <div class="col-6 p-4" style="padding-top: 30px; padding-bottom: 30px;">
                    <h5>@cart.Product.Title</h5>
                </div>
            </div>
            <div class="col-6 row p-4 text-end" style="padding-top: 30px; padding-bottom: 30px;">
                <div class="col-8">
                    $@cart.Price.ToString("c") x @cart.Count
                </div>
                <div class="col-2 text-end">
                    <div class=" btn-group" role="group">
                        <a asp-action="plus" asp-route-cartId="@cart.Id" class="btn btn-primary btn-sm"><i class="bi bi-plus"></i></a>
                        <a asp-action="minus" asp-route-cartId="@cart.Id" class="btn btn-primary btn-sm"><i class="bi bi-dash"></i></a>
                    </div>
                </div>
                <div class="col-1">
                    <div class="">
                        <a asp-action="remove" asp-route-cartId="@cart.Id" class="btn btn-danger btn-sm"><i class="bi bi-x"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <hr color="black" class="p-6"/>
    }

    <div class="row p-4 py-2 pt-3 text-primary  bg-secondary">
        <div class="col-6">
            <h5>Total:</h5>
        </div>
        <div class="col-6 text-end">
            <h5>$@Model.CartTotal.ToString("c")</h5>
        </div>
    </div>
    <div class="p-4 py-3 text-primary bg-light text-end">
        <a asp-action="summary" class="btn btn-outline-success">&nbsp;Summary&nbsp;</a>
    </div>

</div>

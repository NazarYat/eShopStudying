@model int

<div class="container row">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment successfuly!</h1>
        Your order number is: @Model <br /><br />
    </div>
    <div class="col-12 text-center" style="color: maroon;">
        <br />
